<section id="todos">
  <header>
    <h2>Editing '<%= @list[:name] %>'</h2>
    <ul>
      <li>
        <form action='/lists/<%= @list[:id] %>/delete' method='post' class='delete'>
          <button type='submit' class='delete'>Delete List</button>
        </form>
      </li>
    </ul>
  </header>
</section>

<form action="/lists/<%= @list[:id] %>" method="post">
  <dl>
    <dt>
      <label for="list_name">Edit your list:</label>
    </dt>
    <dd>
      <input name="list_name" placeholder="List Name" type="text" value="<%= params[:list_name] || @list[:name] %>">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Save">
    <a href="/lists/<%= @list[:id] %>">Cancel</a>
  </fieldset>
</form>

<% content_for :header_links do %>
<p><a href='/lists'>All lists</a></p>
<% end %>