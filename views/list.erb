<section id='todos' class="<%= list_class(@list) %>">
  <header>
    <h2><%= @list[:name] %></h2>
    <ul>
      <li>
        <form action='/lists/<%= @list[:id] %>/complete_todos' method='post'>
          <button class='check' type='submit'>Complete all</button>
        </form>
      </li>
      <li><a class="edit" href='/lists/<%= @list[:id] %>/edit'>Edit list</a></li>
    </ul>
  </header>

  <ul>
    <% sorted_todos(@list[:todos]) do |todo| %>
    <% if todo[:completed] %>
    <li class='complete'>
    <% else %>
    <li>
    <% end %>
      <form action='/lists/<%= @list[:id] %>/todos/<%= todo[:id] %>' method='post' class='check'>
        <input type='hidden' name='completed' value='<%= !todo[:completed] %>'/>
        <button type='submit'>Complete</button>
      </form>

      <h3><%= todo[:name] %></h3>

      <form action="/lists/<%= @list[:id] %>/todos/<%= todo[:id] %>/delete" method="post" class="delete">
        <button type="submit" class='delete'>Delete</button>
      </form>
    </li>
    <% end %>
  </ul>
</section>

<form action="/lists/<%= @list[:id] %>/todos" method="post">
  <dl>
    <dt>
      <label for="todo">Enter a new todo item:</label>
    </dt>
    <dd>
      <input name="todo" placeholder="Something to do" type="text" value="<%= params[:todo] %>">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Add">
  </fieldset>
</form>

<% content_for :header_links do %>
<p><a class='list' href='/lists'>All lists</a></p>
<% end %>
